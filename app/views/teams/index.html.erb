<%= link_to 'New Team', new_team_path %>


<%= form_tag(teams_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>

<% end %>

<% @search.each do |search| %>
    <div class="article">
      <h6 class="article-title"><%= link_to search.name, new_team_path %></h6>
      <p class="article-content"><%= search.email %></p>
    </div>
<% end %>


