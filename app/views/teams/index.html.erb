

<h1>Listing teams</h1>

<%= @user %>
    <% @teams.each do |team| %>

    <h2><%= team.name %></h2>
    <h5><%= team.description %></h5>
    <h6><%= team.user_id %></h6>

   <%= link_to 'Show', team %>
    <% if @check_user==team.user_id %>
   <%= link_to 'Edit', edit_team_path(team) %>
   <%= button_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

<% end %>





